<div class="container">
  <h2><strong><em><%= @bike.title %></em></strong></h2>
  <%= simple_form_for [@bike, @booking] do |f| %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :end_date, as: :date, html5: true  %>
    <%= f.input :comment %>
    <%= f.submit "Book this bike", class: 'btn btn-primary' %>
  <% end %>
</div>
