<ul>
  <% @bikes.each do |bike| %>
    <li><%= bike.title %></li>
  <% end %>
</ul>

<%= form_with url: bikes_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find your next bike"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
