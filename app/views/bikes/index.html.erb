<div class="container d-flex flex-wrap">
  <% @bikes.each do |bike| %>
    <%= link_to(bike_path(bike)) do %>
      <% if bike.photo.attached? %>
        <div class="card-category me-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path bike.photo.key %>')">
          <%= bike.title %>
        </div>
      <% else %> <!-- Default Bike Picture -->
        <div class="card-category me-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1507035895480-2b3156c31fc8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80')">
          <%= bike.title %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</ul>

<%= form_with url: bikes_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find your next bike"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
</div>
